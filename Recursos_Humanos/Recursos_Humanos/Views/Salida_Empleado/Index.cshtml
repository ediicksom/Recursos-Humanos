@model IEnumerable<ProyectoFinal.Models.Salida_Empleado>

@{
	/**/

	ViewBag.Title = "Listado Salidas";
}

<h2>Listado de Salidas por empleados</h2>

<hr />
<div class="form-group">


	@Html.ActionLink("Agregar nuevo", "Create", "Salida_Empleado", new { @class = "btn btn-primary" })

</div>
<hr />
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Empleado.CodigoEmpleado)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Empleado.Nombre_Empleado)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Empleado.Apellido)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Tipo_Salida)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Motivo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Fecha_Salida)
			</th>
			@*<th></th>*@
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Empleado.CodigoEmpleado)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Empleado.Nombre_Empleado)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Empleado.Apellido)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Tipo_Salida)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Motivo)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Fecha_Salida)
				</td>
				@*<td>
						@Html.ActionLink("Editar", "Edit", new { id = item.Id_Salida }) |
						@Html.ActionLink("Detalles", "Details", new { id = item.Id_Salida }) |
						@Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Salida })
					</td>*@
			</tr>
		}


	</tbody>


</table>
