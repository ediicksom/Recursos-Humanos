@model IEnumerable<ProyectoFinal.Models.Empleado>

@{
	ViewBag.Title = "EmpActivos";
}

<h2>Listado de Empleados Activos </h2>
<table class="table" id="example">
	<thead>
		<tr>

			<th>
				@Html.DisplayNameFor(model => model.CodigoEmpleado)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nombre_Empleado)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Apellido)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefono)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FechaIngreso)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Salario)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cargo.Nombre_Cargo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Departamento.Nombre_Depto)
			</th>
			@*<th>
					@Html.DisplayNameFor(model => model.status)
				</th>*@
			<th></th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model)
		{
			<tr>

				<td>
					@Html.DisplayFor(modelItem => item.CodigoEmpleado)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nombre_Empleado)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Apellido)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefono)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FechaIngreso)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Salario)
				</td>
				@*<td>
						@Html.DisplayFor(modelItem => item.status)
					</td>*@
				<td>
					@Html.DisplayFor(modelItem => item.Cargo.Nombre_Cargo)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Departamento.Nombre_Depto)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id_Empleado }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id_Empleado }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id_Empleado })
				</td>
			</tr>
		}


	</tbody>


</table>
