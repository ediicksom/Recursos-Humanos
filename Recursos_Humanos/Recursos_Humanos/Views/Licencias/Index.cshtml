
@model IEnumerable<Recursos_Humanos.Models.Licencia>

@{
    ViewBag.Title = "Listado licencias";
}

<h2>Listado de Licencias por empleados</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<hr />
<div class="form-group">


    @Html.ActionLink("Crear Licenciar", "Create", "Licencias", new { @class = "btn btn-primary" })

</div>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Empleado.CodigoEmpleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleado.Nombre_Empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inicio_Permiso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fin_Permiso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Motivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentario)
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.CodigoEmpleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.Nombre_Empleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inicio_Permiso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fin_Permiso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Motivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentario)
        </td>
        @*<td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id_licencia }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id_licencia }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id_licencia })
            </td>*@
    </tr>
}

</table>
