
@model IEnumerable<Recursos_Humanos.Models.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Departamentos</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Depto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Depto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo_Depto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Depto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Depto }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Depto }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Depto })
        </td>
    </tr>
}

</table>

