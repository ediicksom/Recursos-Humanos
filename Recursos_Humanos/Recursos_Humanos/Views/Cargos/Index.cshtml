@model IEnumerable<Recursos_Humanos.Models.Cargo>

@{
    ViewBag.Title = "Listado Cargo";
}

<h2>Listado de Cargos</h2>

<p>
    @Html.ActionLink("Crear Cargo", "Create", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Cargo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Cargo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id_Cargo }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id_Cargo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_Cargo })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Volver al inicio", "Index", "Gestion")
</div>